    tag = "0.3.1",
)

git_repository(
    name = "build_bazel_rules_apple",
    remote = "https://github.com/bazelbuild/rules_apple.git",
    tag = "0.4.0",
)

http_file(
    name = "xctestrunner",
    executable = 1,
    url = "https://github.com/google/xctestrunner/releases/download/0.2.2/ios_test_runner.par",
)

bind(
    name = "xcrunwrapper",
    actual = "//ios-app/xcrunwrapper"
)

